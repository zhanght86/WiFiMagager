<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp" >
    <Button
        android:id="@+id/btn_wifi_open"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_border"
        android:text="@string/open_wifi"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_wifi_close"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/button_border2"
        android:text="@string/close_wifi"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_wifi_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/button_border"
        android:text="@string/state_wifi"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_wifi_use"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/button_border2"
        android:text="@string/use_wifi"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_wifi_cut"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/button_border"
        android:text="@string/cut_wifi"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_wifi_reconnect"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/button_border2"
        android:text="@string/reconnect_wifi"
        android:textSize="20sp" />

</LinearLayout>